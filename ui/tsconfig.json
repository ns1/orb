{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "ESNext",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
